---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import RetroGrid from "../components/RetroGrid.astro";
import MagicCard from "../components/MagicCard.astro";

const base = import.meta.env.BASE_URL;
---

<Layout title="Magdalena Golba - Położna">
  <Navigation />

  <!-- Hero Section - Minimalist Centered -->
  <section
    id="start"
    class="relative pt-32 pb-20 bg-white min-h-[60vh] flex items-center overflow-hidden"
  >
    <RetroGrid class="z-0" />
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center hero-content">
        <h1 class="text-6xl md:text-7xl font-bold text-gray-900 mb-6">
          Magdalena Golba
        </h1>
        <p class="text-2xl md:text-3xl text-rose-600 mb-6 font-light">Położna z pasją</p>
        <p class="text-lg text-gray-600 mb-10 max-w-2xl mx-auto leading-relaxed">
          Certyfikowany Doradca Laktacyjny • Doradca Noszenia w Chustach<br/>
          Towarzyszę kobietom w najważniejszym okresie ich życia
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href="#kontakt"
            class="bg-gradient-to-r from-rose-500 to-pink-500 text-white px-10 py-4 rounded-full hover:from-rose-600 hover:to-pink-600 transition-all duration-300 shadow-lg shadow-rose-200 hover:shadow-xl hover:shadow-rose-300 hover:-translate-y-0.5 font-medium text-lg"
          >
            Umów wizytę
          </a>
          <a
            href="#o-mnie"
            class="border-2 border-gray-300 text-gray-700 px-10 py-4 rounded-full hover:border-rose-400 hover:text-rose-600 transition-all duration-300 hover:-translate-y-0.5 font-medium text-lg"
          >
            Poznaj mnie
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section - Large Photo Layout -->
  <section id="o-mnie" class="py-24 bg-gradient-to-b from-rose-50/30 to-white scroll-mt-24">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-5 gap-12 items-start">
          <!-- Large Photo - Takes 2 columns -->
          <div class="md:col-span-2 about-content">
            <div class="sticky top-32">
              <div class="relative">
                <img
                  src={`${base}magda-golba.jpg`}
                  alt="Magdalena Golba - Położna"
                  class="w-full h-auto rounded-3xl object-cover shadow-2xl"
                />
              </div>
              <!-- Social Links -->
              <div class="flex gap-3 mt-8 justify-center">
                <a
                  href="https://www.instagram.com/m_jak_midwife/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-12 h-12 bg-gradient-to-br from-pink-400 to-rose-500 rounded-full flex items-center justify-center text-white hover:scale-110 transition-transform shadow-lg"
                  aria-label="Instagram"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"></path>
                  </svg>
                </a>
                <a
                  href="https://www.facebook.com/MagdalenaGolbaTwojaPolozna"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center text-white hover:scale-110 transition-transform shadow-lg"
                  aria-label="Facebook"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
                  </svg>
                </a>
                <a
                  href="https://www.znanylekarz.pl/magdalena-golba/polozna/polaniec"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-12 h-12 bg-gradient-to-br from-teal-400 to-teal-600 rounded-full flex items-center justify-center text-white hover:scale-110 transition-transform shadow-lg"
                  aria-label="ZnanyLekarz"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Content - Takes 3 columns -->
          <div class="md:col-span-3 space-y-8 about-content">
            <div>
              <h2 class="text-5xl font-bold mb-6 text-gray-900 text-center">
                O mnie
              </h2>
              <p class="text-xl text-rose-600 font-light mb-8">
                Położna z powołaniem i z sercem wspierająca rodziny.
              </p>
            </div>

            <div class="prose prose-lg max-w-none">
              <p class="text-gray-700 leading-relaxed text-justify md:text-left">
                Jestem położną z pasją do swojej pracy. Towarzyszę kobietom w jednym z najważniejszych
                okresów ich życia - od ciąży, przez poród, po pierwsze miesiące macierzyństwa.
              </p>

              <div class="bg-rose-50 border-l-4 border-rose-400 p-6 my-8 rounded-r-2xl">
                <p class="text-lg text-gray-800 font-medium italic">
                  Moją misją jest wspieranie kobiet i rodzin w naturalnym, bezpiecznym podejściu do macierzyństwa.
                </p>
              </div>

              <p class="text-gray-700 leading-relaxed text-justify md:text-left">
                W swojej pracy łączę wiedzę medyczną z indywidualnym podejściem do każdej pacjentki.
                Jestem <strong class="text-rose-600">Certyfikowanym Doradcą Laktacyjnym</strong> oraz
                <strong class="text-rose-600">Certyfikowanym Doradcą Noszenia w Chustach</strong>, co pozwala mi kompleksowo
                wspierać młode mamy w pierwszych tygodniach i miesiącach życia ich dzieci.
              </p>

              <div class="grid grid-cols-2 gap-4 my-8 text-center">
                <div class="bg-white p-4 rounded-xl shadow-md border border-rose-100">
                  <div class="text-3xl font-bold text-rose-600 mb-1">10+</div>
                  <div class="text-sm text-gray-600">Lat doświadczenia</div>
                </div>
                <div class="bg-white p-4 rounded-xl shadow-md border border-rose-100">
                  <div class="text-3xl font-bold text-rose-600 mb-1">500+</div>
                  <div class="text-sm text-gray-600">Zadowolonych rodzin</div>
                </div>
              </div>

              <p class="text-gray-700 leading-relaxed text-justify md:text-left">
                Oferuję szeroki zakres usług: prowadzę indywidualną edukację przedporodową,
                wykonuję wizyty patronażowe, wspieram w karmieniu piersią, uczę bezpiecznego noszenia dzieci,
                a także pomagam w powrocie do zdrowia po porodzie.
              </p>

              <p class="text-gray-700 leading-relaxed text-justify md:text-left">
                Stale poszerzam swoją wiedzę uczestnicząc w szkoleniach i kursach, aby jak najlepiej
                wspierać kobiety i ich rodziny. W swojej praktyce kieruję się empatią, szacunkiem i
                opartym na aktualnej wiedzy medycznej podejściem do opieki okołoporodowej.
              </p>

              <div class="mt-8 p-6 bg-gradient-to-r from-rose-50 to-pink-50 rounded-2xl border border-rose-200">
                <p class="text-gray-700 leading-relaxed">
                  Współpracuję z <a href="https://medi3.pl" target="_blank" rel="noopener noreferrer" class="text-rose-600 font-semibold hover:text-rose-700 transition-colors">Fundacją Medi3</a>,
                  która wspiera rozwój opieki medycznej i edukacji zdrowotnej w Polsce.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section - Bento Grid -->
  <section id="uslugi" class="w-full py-24 bg-white scroll-mt-24">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-5xl font-bold text-center mb-4 text-gray-900">
          Jak mogę Ci pomóc
        </h2>
        <p class="text-center text-gray-600 mb-16 text-lg">
          Kompleksowa opieka położnicza dostosowana do Twoich potrzeb
        </p>

        <!-- Bento Grid - Different sized cards -->
        <div class="grid grid-cols-1 md:grid-cols-6 gap-6 services-grid">
          <!-- Large Card - Spans 4 columns -->
          <MagicCard class="md:col-span-4 bg-gradient-to-br from-rose-50 to-pink-50">
            <div class="flex flex-col md:flex-row gap-6 items-start">
              <div class="w-20 h-20 bg-gradient-to-br from-rose-400 to-pink-400 rounded-2xl flex items-center justify-center flex-shrink-0 shadow-lg">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-3xl font-bold mb-4 text-gray-900">Wsparcie laktacyjne</h3>
                <p class="text-gray-700 leading-relaxed mb-4">
                  Profesjonalne doradztwo w zakresie karmienia piersią. Pomoc w rozwiązywaniu problemów z laktacją, nauka prawidłowego przystawiania oraz wsparcie w naturalnym karmieniu.
                </p>
                <ul class="space-y-2 text-gray-600">
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-rose-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Pomoc przy pierwszym przystawieniu</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-rose-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Rozwiązywanie problemów laktacyjnych</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-rose-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Wsparcie w budowaniu pewności siebie</span>
                  </li>
                </ul>
              </div>
            </div>
          </MagicCard>

          <!-- Medium Card - Spans 2 columns -->
          <MagicCard class="md:col-span-2">
            <div class="w-16 h-16 bg-gradient-to-br from-rose-400 to-pink-400 rounded-2xl flex items-center justify-center mb-6 shadow-lg">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3 text-gray-900">Wizyty patronażowe</h3>
            <p class="text-gray-600 leading-relaxed">
              Opieka nad mamą i dzieckiem w domu po porodzie. Kontrola stanu zdrowia noworodka i wsparcie w pielęgnacji.
            </p>
          </MagicCard>

          <!-- Medium Card - Spans 2 columns -->
          <MagicCard class="md:col-span-2">
            <div class="w-16 h-16 bg-gradient-to-br from-rose-400 to-pink-400 rounded-2xl flex items-center justify-center mb-6 shadow-lg">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3 text-gray-900">Edukacja przedporodowa</h3>
            <p class="text-gray-600 leading-relaxed">
              Indywidualne przygotowanie do porodu i rodzicielstwa. Naturalny sposób na przygotowanie się do narodzin dziecka.
            </p>
          </MagicCard>

          <!-- Large Card - Spans 4 columns -->
          <MagicCard class="md:col-span-4 bg-gradient-to-br from-pink-50 to-rose-50">
            <div class="flex flex-col md:flex-row gap-6 items-start">
              <div class="w-20 h-20 bg-gradient-to-br from-pink-400 to-rose-400 rounded-2xl flex items-center justify-center flex-shrink-0 shadow-lg">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-3xl font-bold mb-4 text-gray-900">Noszenie w chustach i nosidłach</h3>
                <p class="text-gray-700 leading-relaxed mb-4">
                  Jako Certyfikowany Doradca Noszenia w Chustach, nauczę Cię bezpiecznego i wygodnego noszenia Twojego dziecka.
                </p>
                <ul class="space-y-2 text-gray-600">
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-rose-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Dobór odpowiedniej chusty lub nosidła</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-rose-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Nauka wiązań odpowiednich dla wieku dziecka</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-rose-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Bezpieczeństwo i ergonomia noszenia</span>
                  </li>
                </ul>
              </div>
            </div>
          </MagicCard>

          <!-- Small Cards - Each spans 2 columns -->
          <MagicCard class="md:col-span-2">
            <div class="w-14 h-14 bg-gradient-to-br from-rose-400 to-pink-400 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-900">KTG</h3>
            <p class="text-gray-600 text-sm">Kardiotokografia - monitorowanie stanu płodu</p>
          </MagicCard>

          <MagicCard class="md:col-span-2">
            <div class="w-14 h-14 bg-gradient-to-br from-rose-400 to-pink-400 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-900">Pomiar bilirubiny</h3>
            <p class="text-gray-600 text-sm">Nieinwazyjne badanie żółtaczki u noworodków</p>
          </MagicCard>

          <MagicCard class="md:col-span-2">
            <div class="w-14 h-14 bg-gradient-to-br from-rose-400 to-pink-400 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-gray-900">Wypożyczalnia laktatorów</h3>
            <p class="text-gray-600 text-sm">Profesjonalne laktatory do wypożyczenia</p>
          </MagicCard>
        </div>
      </div>
    </div>
  </section>

  <!-- Cennik Section - 3 Column Cards -->
  <section id="cennik" class="py-24 bg-gradient-to-b from-rose-50/20 to-white scroll-mt-24">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-5xl font-bold text-center mb-4 text-gray-900">Cennik</h2>
        <p class="text-center text-gray-600 mb-16 text-lg">
          Przejrzyste ceny usług położniczych
        </p>

        <!-- 3 Column Grid -->
        <div class="grid md:grid-cols-3 gap-8 mb-12 pricing-grid">
          <!-- Column 1: Konsultacje -->
          <div class="bg-white rounded-3xl shadow-lg border border-rose-100 overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="bg-gradient-to-br from-rose-400 to-pink-400 p-6 text-center">
              <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                </svg>
              </div>
